-- MEDICAL 
CREATE TABLE MEDICAL(
Medical_id CHAR(6),
St_id CHAR(6),
Date_submitted DATE,
Status VARCHAR(20),
CHECK (Status = 'Approved' OR Status = 'Rejected'),
PRIMARY KEY(Medical_id),
FOREIGN KEY(St_id) REFERENCES student(St_id) ON DELETE CASCADE
);

